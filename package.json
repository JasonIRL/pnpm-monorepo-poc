{
  "name": "monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "turbo run build build:storybook",
    "test": "turbo run test",
    "lint": "turbo run format-and-lint",
    "lint:fix": "turbo run format-and-lint:fix",
    "dev": "pnpm --parallel -r watch",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "migrate": "pnpm exec migration-cli",
    "storybook": "pnpm --filter storybook storybook",
    "start:website": "pnpm --filter website dev",
    "start:components": "pnpm --filter components start",
    "build:components": "pnpm --filter components build",
    "build:theme": "pnpm --filter theme build",
    "build:utils": "pnpm --filter utils build",
    "watch:components": "pnpm --filter components watch",
    "watch:theme": "pnpm --filter theme watch",
    "watch:utils": "pnpm --filter utils watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@9.4.0+sha256.b6fd0bfda555e7e584ad7e56b30c68b01d5a04f9ee93989f4b93ca8473c49c74",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "turbo": "^2.0.5",
    "@monorepo/migration-cli": "workspace:*"
  }
}
